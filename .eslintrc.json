{
  "env":{
    "browser":true,
    "node": true
  },
  "extends":[
    "eslint:recommended",
    "plugin:vue/vue3-recommended"
  ],
  "rules":{
    "key-spacing": [2, {"beforeColon": true, "afterColon": true}],
    "indent": ["error", 2],
    "space-in-parens": ["error", "always"],
    "semi": ["error", "never"],
    "quotes":["error", "single"],
    "vue/html-closing-bracket-newline": ["error", {
      "singleline": "never",
      "multiline": "never"
    }],
    "vue/html-self-closing": ["error", {
      "html": {
        "void": "always",
        "normal": "never",
        "component": "always"
      },
      "svg": "always",
      "math": "always"
    }]
  }
}